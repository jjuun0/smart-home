<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetPeopleActivity">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginEnd="173dp"
        android:layout_marginRight="173dp"
        android:layout_marginBottom="72dp"
        android:onClick="onBackButtonClicked"
        android:text="돌아가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people_list_view" />

    <TextView
        android:id="@+id/people_list_view"
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="조회 버튼을 누르세요"
        app:layout_constraintBottom_toTopOf="@+id/back_button"
        app:layout_constraintTop_toBottomOf="@+id/request_get_button"
        tools:layout_editor_absoluteX="29dp" />

    <Button
        android:id="@+id/request_get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:onClick="requestGetButtonClicked"
        android:text="조회"
        app:layout_constraintBottom_toTopOf="@+id/people_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>